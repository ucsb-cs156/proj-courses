{
  "name": "proj-courses-frontend",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": "^v22.18.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.0.0",
    "@fortawesome/free-brands-svg-icons": "^7.0.0",
    "@fortawesome/free-regular-svg-icons": "^7.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@fortawesome/react-fontawesome": "^0.2.3",
    "@tanstack/react-table": "^8.21.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.7.4",
    "bootstrap": "^5.3.3",
    "graphql": "^16.9.0",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.4",
    "react-dom": "^18.3.1",
    "react-fontawesome": "^1.7.1",
    "react-hook-form": "^7.53.0",
    "react-inspector": "^6.0.2",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.26.1",
    "react-toastify": "^10.0.5",
    "react18-json-view": "^0.2.8",
    "recharts": "^2.12.7",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "test:watch:coverage": "vitest --coverage",
    "check-format": "prettier --check \"src/**/*.{js,jsx}\"",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic run --project-token=$(grep CHROMATIC_PROJECT_TOKEN= ../.env  | sed -e s/CHROMATIC_PROJECT_TOKEN=// ) --exit-once-uploaded"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@chromatic-com/storybook": "^1.7.0",
    "@eslint/js": "^9.9.0",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-links": "9.1.16",
    "@storybook/addon-onboarding": "9.1.16",
    "@storybook/react-vite": "^9.1.3",
    "@stryker-mutator/vitest-runner": "^9.3.0",
    "@testing-library/react": "^16.0.0",
    "@vitejs/plugin-react-swc": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/eslint-plugin": "^1.3.4",
    "axios-mock-adapter": "^2.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "9.1.16",
    "eslint-plugin-testing-library": "^7.6.6",
    "globals": "^15.9.0",
    "msw": "^2.4.1",
    "msw-storybook-addon": "^2.0.3",
    "nyc": "^17.0.0",
    "prettier": "^3.3.3",
    "prop-types": "^15.8.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "storybook": "9.1.16",
    "vite": "^7.1.12",
    "vitest": "^4.0.7",
    "webpack": "^5.93.0"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "branches": 80,
    "functions": 80,
    "reporter": [
      "html",
      "text-summary"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^axios$": "axios/dist/node/axios.cjs"
    },
    "collectCoverageFrom": [
      "src/main/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:storybook/recommended"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_|",
          "varsIgnorePattern": "(^_)|(^React$)"
        }
      ],
      "react/react-in-jsx-scope": "off",
      "react/jsx-uses-react": "off",
      "react/prop-types": "off",
      "react/no-unescaped-entities": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "(^_)|(^React$)"
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "overrides": {
    "react-refresh": "0.14.2"
  }
}
